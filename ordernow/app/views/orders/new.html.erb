<!DOCTYPE html>
<html lang="pt-br" dir="ltr">

    <head>
        <meta charset="utf-8">
        <title>Orders</title>
    </head>

    <body>
        <div class="container">
            
            <%= link_to 'Back', orders_path %>

            <div class="row">
                <%= form_for @orders, url: {action: "create"} do |f| %>
                    <h2>Date</h2>
                    <%= date_field(:order, :data) %>
                    <br>
                    <h2>Description</h2>
                    <br>
                    <%= f.text_field :description %>
                    <br>
                    <h2>Value</h2>
                    <%= f.number_field :value %>
                    <br>
                    <%= f.submit "Create" %>
                <% end %>
            </div>

            <% if @orders.errors.any? %>
                <div id="error_explanation">
                    <h2><%= pluralize(@orders.errors.count, "error") %> impedindo esse pedido de ser criado: </h2>

                    <ul>
                        <% @orders.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>
        </div>

    </body>
</html>
